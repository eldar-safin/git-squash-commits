mkdir git-squash-commits
cd git-squash-commits
git init
echo "LOG_LEVEL=INFO" > .env.example
echo "LOG_LEVEL=DEBUG" > .env
echo .env > .gitignore
git add .
git commit -m "Создал файлы для примера"

cat <<"END" > main.py\n#!/usr/bin/env python3\n\nimport sys\n\n\ndef main():\n    return 0\n\nif __name__ == "__main__":\n    sys.exit(main())\n\nEND
chmod +x main.py
git add main.py
git commit -m "Добавил main.py"
